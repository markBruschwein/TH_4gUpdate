    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="$1000"
            android:id="@+id/CPU1Money"
            android:layout_weight="1"
            android:textColor="#eee41b"
            android:textSize="20dp"
            android:gravity="center_vertical|right" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/CPU1Card1"
            android:layout_weight="1"
            android:background="#5c18da"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/CPU1Card2"
            android:layout_weight="1"
            android:background="#5c18da"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="$1000"
            android:id="@+id/CPU2Money"
            android:layout_weight="1"
            android:textColor="#eee41b"
            android:textSize="20dp"
            android:gravity="center_vertical|right" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/CPU2Card1"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#5c18da" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/CPU2Card2"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="#5c18da" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="$1000"
            android:id="@+id/CPU3Money"
            android:layout_weight="1"
            android:textColor="#eee41b"
            android:textSize="20dp"
            android:gravity="center_vertical|right" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/CPU3Card1"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#5c18da" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/CPU3Card2"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="#5c18da" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="$325"
            android:id="@+id/potValue"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textColor="#eee41b"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fcfbfb"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/midCard1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="7"
                android:layout_weight=".5"
                android:textSize="30dp"
                android:textColor="#f40606"
                android:id="@+id/flopCard1ValueTop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/flopCard1Suit"
                android:text="♥"
                android:textSize="30dp"
                android:textColor="#f40606"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="7"
                android:id="@+id/flopCard1ValueBottom"
                android:layout_weight=".5"
                android:textColor="#f40606"
                android:gravity="bottom|right"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fcfbfb"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/midCard2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="4"
                android:id="@+id/flopCard2ValueTop"
                android:layout_weight=".5"
                android:textSize="30dp"
                android:textColor="#f40606" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/flopCard2Suit"
                android:textSize="30dp"
                android:textColor="#f40606"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="♦" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="4"
                android:id="@+id/flopCard2ValueBottom"
                android:layout_weight=".5"
                android:textColor="#f40606"
                android:gravity="bottom|right"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fcfbfb"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/midCard3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="5"
                android:id="@+id/flopCard3ValueTop"
                android:layout_weight=".5"
                android:textSize="30dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/flopCard3Suit"
                android:text="♣"
                android:textSize="30dp"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_margin="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="5"
                android:id="@+id/flopCard3ValueBottom"
                android:layout_weight=".5"
                android:textColor="#000000"
                android:gravity="bottom|right"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fcfbfb"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/midCard4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="A"
                android:id="@+id/flopCard4ValueTop"
                android:layout_weight=".5"
                android:textSize="30dp"
                android:textColor="#f40606" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/flopCard4Suit"
                android:text="♥"
                android:textSize="30dp"
                android:textColor="#f40606"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="A"
                android:id="@+id/flopCard4ValueBottom"
                android:layout_weight=".5"
                android:textColor="#f40606"
                android:gravity="bottom|right"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fcfbfb"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/midCard5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="2"
                android:id="@+id/flopCard5ValueTop"
                android:layout_weight=".5"
                android:textSize="30dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/flopCard5Suit"
                android:text="♠"
                android:textSize="30dp"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="2"
                android:id="@+id/flopCard5ValueBottom"
                android:layout_weight=".5"
                android:textColor="#000000"
                android:gravity="bottom|right"
                android:textSize="30dp" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="$1000"
            android:id="@+id/userMoney"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#eee41b"
            android:layout_marginRight="0dp"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fcfbfb"
            android:id="@+id/userCard1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="4"
                android:id="@+id/userCard1ValueTop"
                android:layout_weight=".5"
                android:textSize="30dp"
                android:textColor="#f40606" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/userCard1Suit"
                android:text="♥"
                android:textSize="30dp"
                android:textColor="#f40606"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="4"
                android:id="@+id/userCard1ValueBottom"
                android:layout_weight=".5"
                android:textColor="#f40606"
                android:gravity="bottom|right"
                android:textSize="30dp" />
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fcfbfb"
            android:id="@+id/userCard2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="10"
                android:id="@+id/userCard2ValueTop"
                android:layout_weight=".5"
                android:textSize="30dp"
                android:textColor="#f40606" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/userCard2Suit"
                android:text="♥"
                android:textSize="30dp"
                android:textColor="#f40606"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="10"
                android:id="@+id/userCard2ValueBottom"
                android:layout_weight=".5"
                android:textColor="#f40606"
                android:gravity="bottom|right"
                android:textSize="30dp" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Bet Value:"
            android:id="@+id/textView2"
            android:layout_weight=".75"
            android:textSize="20dp"
            android:textColor="#eee41b"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/betTextView"
            android:layout_weight=".75"
            android:gravity="center|center_vertical|left"
            android:textColor="#eee41b"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="match_parent">

            <SeekBar
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:id="@+id/betSeekBar"
                android:layout_weight="2.5" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Bet"
                android:id="@+id/customBetButton" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Call The Bet"
            android:id="@+id/callBetButton"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Check"
            android:id="@+id/checkButton"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Fold"
            android:id="@+id/foldButton"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Game"
            android:id="@+id/newGameButton"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>